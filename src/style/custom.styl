@import '../../node_modules/yeticss/lib/yeticss/index'

#mount-point
  width 100%
  height 100%
  padding 0
  margin 0

label
  text-transform uppercase
  &:hover
    opacity 0.7

header
  padding-top 50px

h1
  font-size 3.5em
  text-transform uppercase

.main-logo
  text-transform uppercase
  text-align center
  font-weight bold
.label
  height 40px
  &-icons
    display inline-block
    margin-left 10px
    margin-right 10px

  &-color
    width 24px
    height 24px
    border 1px solid grey
    border-radius 20px
    display inline-block
    margin-right 20px


.repo-list
  &__item
    display flex
    align-items center
    margin-bottom 10px
  &__link
    margin-left 10px

.repo-title
  font-size 3em
  &--detail
    font-size 2em
    text-align center
    margin 0

.user-login
  margin-left 10px

.repo-header
  display flex
  align-items center

.button
  margin-left 10px
  padding 5px 10px
  &--back
    margin-left auto
    padding 5px 30px
  &--new
    margin 0
    padding 5px 50px
    background-color #bbbbee
